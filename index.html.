<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Houston Shelters Map</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <script src="https://api.mapbox.com/mapbox-gl-js/v2.14.1/mapbox-gl.js"></script>
  <link href="https://api.mapbox.com/mapbox-gl-js/v2.14.1/mapbox-gl.css" rel="stylesheet" />
  <style>
    body, html { margin: 0; padding: 0; height: 100%; }
    #map { position: absolute; top: 0; bottom: 0; width: 100%; }
  </style>
</head>
<body>
  <div id="map"></div>

  <script>
    mapboxgl.accessToken = 'pk.eyJ1IjoiYnJlYWtpbmtoYWlueiIsImEiOiJjbWJuNGVuc3Exank1MnJvaXRnaTN4aTVrIn0.KGhRVS_K6XRGQh_Y5RZzZA';

    const map = new mapboxgl.Map({
      container: 'map',
      style: 'mapbox://styles/mapbox/streets-v11',
      center: [-95.3698, 29.7604], // Houston coordinates
      zoom: 11
    });

    fetch('https://api.jsonbin.io/v3/b/6844fe3b8960c979a5a67de8')
      .then(response => response.json())
      .then(data => {
        const shelters = data.record;  // This is where your array lives

        if (!Array.isArray(shelters)) {
          console.error('Shelters data is not an array.');
          return;
        }

        shelters.forEach(shelter => {
          if (shelter.latitude && shelter.longitude) {
            new mapboxgl.Marker()
              .setLngLat([shelter.longitude, shelter.latitude])
              .setPopup(new mapboxgl.Popup({ offset: 25 }).setHTML(`
                <strong>${shelter.name || 'No name'}</strong><br/>
                ${shelter.address || ''}<br/>
                ${shelter.phone || ''}<br/>
                Type: ${shelter.type || 'N/A'}<br/>
                ${shelter.website ? `<a href="${shelter.website}" target="_blank">Website</a>` : ''}
              `))
              .addTo(map);
          }
        });
      })
      .catch(error => {
        console.error('Error fetching shelter data:', error);
      });
  </script>
</body>
</html>
